{% embed './default.twig' %}
  {% block content %}
    <section class="masthead">
      {%
        include '../styleguide/patterns/01-components/page-title/page-title.twig' with {
          'text': 'Let\'s have',
          'emphasized': 'fun together'
        }
      %}
    </section>

    {% embed '../styleguide/patterns/02-layouts/l-columns/l-columns.twig' with {
      count: 2,
      constrained: true
    } only %}
      {% block first %}
      {% endblock %}

      {% block second %}
      {%
        include '../styleguide/patterns/01-components/title--fancy/title--fancy.twig' with {
        'text': title,
        }
      %}
      {{ parent() }}
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}
