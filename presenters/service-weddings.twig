{% embed './default.twig' %}
  {% block content %}
    {# Place the page header. #}
    {% embed '../styleguide/patterns/01-components/c-billboard/c-billboard.twig' with { alignment: 'end' } %}
      {% block content %}
        {% include '../styleguide/patterns/01-components/c-action-list/c-action-list.twig' with {
          title: "Bold Design for the Modern Bride",
          items: [
            'Save the dates',
            'Invitation suites',
            'Programs &amp; Menus',
            'Day of paper goods',
            'Favors &amp Gifts',
            'Thank you cards',
            'RSVP websites',
            'Professional printing'
          ],
          button: {
            content: 'See More',
            href: '/servies/weddings/'
          },
          variant: 'light',
          classes: ['c-billboard__item']
        } %}
      {% endblock %}
    {% endembed %}

    {% include '../styleguide/patterns/01-components/c-section-title/c-section-title.twig' with {
      text: "Our Favs"
    } only %}

    {% if studies is not empty %}
      <ul class="case-studies">
        {% for study in studies %}
          <li class="case-studies__study">
            <a href="/{{ study.url }}" class="case-studies__study-link">
              <img src="/assets/images/square/{{ study.main_image }}" alt="{{ study.title }}" class="case-studies__study-image">
              <p class="case-studies__study-title">{{ study.title }}</p>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}

    {% include '../styleguide/patterns/01-components/c-section-title/c-section-title.twig' with {
      text: "How It Works"
    } only %}

     {% embed '../styleguide/patterns/02-layouts/l-constrained/l-constrained.twig' %}
      {% block region %}
        {% include '../styleguide/patterns/01-components/c-instructions/c-instructions.twig' with {
          items: [{
            title: "Contact",
            body: "<p>Send us an email detailing your needs and vision or we'll out our <a href=\"#\">quote request form</a> and we’ll review your ideas and provide a price estimate, timeline and detailed outline of what to expect.</p>"
          }, {
            title: "Exploration",
            body: "<p>Once we’ve collected a signed proposal and the initial deposit, we’re ready to get started. You'll receive initial design concepts, and an allo ed number of revisions to the chosen concept.</p>"
          }, {
            title: "Extension",
            body: "<p>Once your concept has been established, it will be carried over to all of your pieces. You’ll receive digital proofs and an allowed number of revisions to each piece.</p><p><small>Printed proofs available upon request, if timeline allows.</small></p>"
          }, {
            title: "Finishing",
            body: "<p>Once we’ve received approval and final payment, we’ll go to print and your final pieces will arrive in your mailbox soon!</p>"
          }]
        } only %}
      {% endblock %}
    {% endembed %}

    {% include '../styleguide/patterns/01-components/c-cta-banner/c-cta-banner.twig' with {
        title: "Showers, Soirées, and Celebrations...",
        subtitle: "we've got you",
        button: {
          href: "http://www.google.com",
          text: "Go Shopping"
        }
    } %}

    {% include '../styleguide/patterns/01-components/c-slogan/c-slogan.twig' with {
        text: "Love is all you need. Love, and a really great cocktail.",
    } %}
  {% endblock %}
{% endembed %}
